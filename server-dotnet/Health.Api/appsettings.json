{
  "Server": {
    "Address": "0.0.0.0",
    "Port": 3000
  },
  "Database": {
    "Path": "data/health.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Users": [
    "永远健康",
    "快乐永久"
  ],
  "AllowedHosts": "*",
  "AuthSettings": {
    "Code": "123456",
    "SecretKey": "HealthAppSecretKeyVerySecure2024!"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*/api/auth/login",
        "Period": "1m",
        "Limit": 5
      }
    ]
  }
}